<div class='container'>

  <div class='container my-3'>
    <%= link_to 'New Kind', new_kind_path, class:'btn btn-primary' %>
  </div>

  <div class='container my-2'>
    <h1>Kinds</h1>

    <table class='table'>
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @kinds.each do |kind| %>
          <tr>
            <td><%= kind.id %></td>
            <td><%= kind.name %></td>
            <td><%= link_to 'Show', kind %></td>
            <td><%= link_to 'Edit', edit_kind_path(kind) %></td>
            <td><%= link_to 'Destroy', kind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>

